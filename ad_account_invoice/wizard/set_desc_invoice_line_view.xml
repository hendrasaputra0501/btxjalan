<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_desc_invoice_line_wizard" model="ir.ui.view">
            <field name="name">Set Description</field>
            <field name="model">desc.invoice.line.wizard</field>
            <field name="arch" type="xml">
            <form string="Set Description" version="7.0">
                <separator string="Set Description"/>
                <group>
                    <field name="desc"/>
                </group>
                <footer>
                    <button name="set_desc" string="Set" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>
        <record id="action_desc_invoice_line_wizard" model="ir.actions.act_window">
            <field name="name">Set Description</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">desc.invoice.line.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
