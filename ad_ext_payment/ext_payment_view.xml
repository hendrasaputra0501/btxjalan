<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="ext_payment_search" model="ir.ui.view">
            <field name="name">ext.payment.search</field>
            <field name="model">ext.payment</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <group col='15' colspan='4'>
                        <field name="journal_id" widget="selection"/>
                        <field name="date"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="view_extra_payment_tree" model="ir.ui.view">
            <field name="name">ext.payment.tree</field>
            <field name="model">ext.payment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Extra Payment">
                    <field name="date"/>
                    <field name="journal_id"/>
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="currency_id"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="view_extra_payment_form" model="ir.ui.view">
            <field name="name">ext.payment.form</field>
            <field name="model">ext.payment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Extra Payment Form">
                    <field name="name" required="1" readonly="1"/>
                    <field name="partner_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                    <field name="journal_id" domain="[('type','in',['bank', 'cash'])]" widget="selection"
                        select="1"/>
                    <field name="ref"/>
                    <field name="date"/>
                    <field name="force_period"/>
                    <field name="currency_id"/>
                    <notebook colspan="4">
                        <page string="Lines">
                            <field name="ext_line" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="account_id"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                </tree>
                                <form editable="bottom">
                                    <field name="name"/>
                                    <field name="account_id"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                </form>
                            </field>
                        </page>
                        <page string="Journal Items" groups="base.group_extended" attrs="{'invisible': [('state','!=','approve')]}">
                            
                            <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                                <tree string="Journal Items">
                                    <field name="move_id"/>
                                    <field name="ref"/>
                                    <field name="date"/>
                                    <field name="statement_id"/>
                                    <field name="partner_id"/>
                                    <field name="account_id"/>
                                    <field name="name"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="state"/>
                                    <field name="reconcile_id"/>
                                    <field name="amount_currency"/>
                                    <field name="currency_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group col="10" colspan="4">
                        <field name="state"/>
                        <button name="approve" string="Approve" type="object" states="draft"/>
                        <button name="cancel_transaction" string="Cancel" type="object" states="approve"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="action_extra_payment" model="ir.actions.act_window">
            <field name="name">Extra Transaction</field>
            <field name="res_model">ext.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="search_view_id" ref="view_bank_transaction_filter"/>-->
        </record>
        
        <menuitem action="action_extra_payment" id="menu_action_extra_payment" parent="account.menu_finance_bank_and_cash"
            sequence="1"/>
        
    </data>
</openerp>