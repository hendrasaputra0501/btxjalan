<openerp>
	<data noupdate="1">
		<record id="seq_type_advance_payment_in" model="ir.sequence.type">
            <field name="name">Customer Advance</field>
            <field name="code">account.advance.payment.in</field>
        </record>
        
        <record id="seq_advance_payment_in" model="ir.sequence">
            <field name="name">Customer Advance</field>
            <field name="code">account.advance.payment.in</field>
            <field name="prefix">%(y)s%(month)s-</field>
            <field name="suffix"></field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_type_advance_payment_out" model="ir.sequence.type">
            <field name="name">Supplier Advance</field>
            <field name="code">account.advance.payment.out</field>
        </record>
        
        <record id="seq_advance_payment_out" model="ir.sequence">
            <field name="name">Supplier Advance</field>
            <field name="code">account.advance.payment.out</field>
            <field name="prefix">%(y)s%(month)s-</field>
            <field name="suffix"></field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
	</data>
</openerp>